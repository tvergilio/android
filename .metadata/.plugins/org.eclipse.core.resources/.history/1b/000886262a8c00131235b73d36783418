package com.tvergilio.googleit;

import java.util.ArrayList;

import android.app.Activity;
import android.app.ListActivity;
import android.content.ComponentName;
import android.content.Context;
import android.content.Intent;
import android.content.ServiceConnection;
import android.os.Bundle;
import android.os.IBinder;
import android.os.RemoteException;
import android.util.Log;
import android.view.Menu;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.ListView;
import android.widget.RadioButton;
import android.widget.TextView;

import com.tvergilio.googleit.service.IWordService;

public class MainActivity extends ListActivity {
	protected static final String LOGGING_TAG = null;
	private ArrayList<Word> words;
	private IWordService wordService;
	// Is the service bound currently?
	private boolean bound = false;
	private TextView wordName;
	private RadioButton firstSuggestionRadio;
	private RadioButton secondSuggestionRadio;
	private RadioButton thirdSuggestionRadio;

	private int index;

	private ServiceConnection connection = new ServiceConnection() {
		public void onServiceConnected(ComponentName className, IBinder service) {
			wordService = IWordService.Stub.asInterface(service);
			try {
				words = (ArrayList<Word>) wordService.getWordCollection();
				if (words == null) {
					words = new ArrayList<Word>(0);
				}
				refresh();
			} catch (RemoteException e) {
				Log.e(LOGGING_TAG, "Exception retrieving word from service", e);
			}
		}

		public void onServiceDisconnected(ComponentName className) {
			wordService = null;
		}
	};

	protected void onStart() {
		super.onStart();
		// create initial list
		if (!bound) {
			bound = bindService(new Intent(MainActivity.this,
					GoogleSuggestManagerService.class), connection,
					Context.BIND_AUTO_CREATE);
			Log.d(LOGGING_TAG, "Bound to service: " + bound);
		}
		if (!bound) {
			Log.e(LOGGING_TAG, "Failed to bind to service");
			throw new RuntimeException("Failed to find to service");
		}

		Word currentWord = words.get(index);
		wordName.setText(currentWord.getName());
		firstSuggestionRadio.setText(currentWord.getFirstSuggestion());
		secondSuggestionRadio.setText(currentWord.getSecondSuggestion());
		thirdSuggestionRadio.setText(currentWord.getThirdSuggestion());

	}

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
		wordName = (TextView) findViewById(R.id.word_name);
		firstSuggestionRadio = (RadioButton) findViewById(R.id.firstSuggestion_radio);
		secondSuggestionRadio = (RadioButton) findViewById(R.id.secondSuggestion_radio);
		thirdSuggestionRadio = (RadioButton) findViewById(R.id.thirdSuggestion_radio);
		index = 0;
		bindService(new Intent(IWordService.class.getName()), connection,
				Context.BIND_AUTO_CREATE);

	}

	protected void refresh() {
		// TODO Auto-generated method stub

	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.main, menu);
		return true;
	}

	@Override
	protected void onDestroy() {
		super.onDestroy();
		// disconnect from the stock service
		unbindService(connection);
	}

}
