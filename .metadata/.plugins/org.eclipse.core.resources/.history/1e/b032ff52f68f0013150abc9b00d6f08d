package com.example.googleitdb;

import android.content.Context;
import android.os.CountDownTimer;

public class AnswerCountdownTimer extends CountDownTimer {
	private Context context;	

	public AnswerCountdownTimer(long millisInFuture, long countDownInterval, Context context) {
		super(millisInFuture, countDownInterval);
		this.context = context;		
	}

	@Override
	public void onFinish() {
		context.getTimerView().text.setText("Time's up!");

	}

	@Override
	public void onTick(long arg0) {
		context.timer.text.setText("Time remaining:" + millisUntilFinished);

	}

}
