package com.tvergilio.googleit;

import java.util.ArrayList;

import android.app.Activity;
import android.app.ListActivity;
import android.content.ComponentName;
import android.content.Context;
import android.content.Intent;
import android.content.ServiceConnection;
import android.os.Bundle;
import android.os.IBinder;
import android.os.RemoteException;
import android.util.Log;
import android.view.Menu;

import com.tvergilio.googleit.service.IWordService;

public class MainActivity extends ListActivity {
	protected static final String LOGGING_TAG = null;
	private ArrayList<Word> words;
	private IWordService wordService;	
	private ServiceConnection connection = new ServiceConnection() {
		public void onServiceConnected(ComponentName className, IBinder service) {
			wordService = IWordService.Stub.asInterface(service);
			try {
				words = (ArrayList<Word>) wordService.getWordCollection();
				if (words == null) {
					words = new ArrayList<Word>(0);
				}
				refresh();
			} catch (RemoteException e) {
				Log.e(LOGGING_TAG, "Exception retrieving word from service", e);
			}
		}

		public void onServiceDisconnected(ComponentName className) {
			wordService = null;
		}
	};

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
		bindService(new Intent(IWordService.class.getName()), connection,
				Context.BIND_AUTO_CREATE);

	}


	protected void refresh() {
		// TODO Auto-generated method stub
		
	}



	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.main, menu);
		return true;
	}

}
