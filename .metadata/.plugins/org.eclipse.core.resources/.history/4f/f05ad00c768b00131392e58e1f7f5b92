package com.tvergilio.googleit;

import java.util.List;

import android.os.Parcel;
import android.os.Parcelable;

public class Word implements Parcelable {
	private String name;
	private String firstSuggestion;
	private String secondSuggestion;
	private String thirdSuggestion;

	// db assigned
	private int id;

	// Getters and setters
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getFirstSuggestion() {
		return firstSuggestion;
	}

	public void setFirstSuggestion(String firstSuggestion) {
		this.firstSuggestion = firstSuggestion;
	}

	public String getSecondSuggestion() {
		return secondSuggestion;
	}

	public void setSecondSuggestion(String secondSuggestion) {
		this.secondSuggestion = secondSuggestion;
	}

	public String getThirdSuggestion() {
		return thirdSuggestion;
	}

	public void setThirdSuggestion(String thirdSuggestion) {
		this.thirdSuggestion = thirdSuggestion;
	}

	// Constructors
	private Word(Parcel parcel) {
		this.readFromParcel(parcel);
	}

	public Word(String name, String firstSuggestion, String secondSuggestion,
			String thirdSuggestion, int id) {
		this.name = name;
		this.firstSuggestion = firstSuggestion;
		this.secondSuggestion = secondSuggestion;
		this.thirdSuggestion = thirdSuggestion;
		this.id = id;
	}

	public static final Parcelable.Creator<Word> CREATOR = new Parcelable.Creator<Word>() {
		public Word createFromParcel(Parcel source) {
			return new Word(source);
		}

		public Word[] newArray(int size) {
			return new Word[size];
		}
	};

	@Override
	public int describeContents() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public void writeToParcel(Parcel arg0, int arg1) {
		// Serialise to Parcel
		arg0.writeString(name);
		arg0.writeString(firstSuggestion);
		arg0.writeString(secondSuggestion);
		arg0.writeString(thirdSuggestion);

	}

	public void readFromParcel(Parcel parcel) {
		name = parcel.readString();
		firstSuggestion = parcel.readString();
		secondSuggestion = parcel.readString();
		thirdSuggestion = parcel.readString();
	}

}
